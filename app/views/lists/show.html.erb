<h1><%= @list.name %></h1>
<div>
<%= link_to "Ajouter un film (bookmark)", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
<div>
<%= link_to "BACK TO LISTS", lists_path, class: "btn btn-secondary mt-2" %>
</div>


<h2>ALL FILMS</h2>
<ul>
  <% Movie.all.each do |movie| %>
    <li>
      <img src="<%= movie.poster_url %>" alt="<%= movie.title %>" style="width:100px;
    padding: 13px; display: inline;">
      <%= movie.title %>
    </li>
  <% end %>
</ul>
